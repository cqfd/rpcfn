#!/usr/bin/env ruby

require 'optparse'

options = {}

opts = OptionParser.new do |opts|
  opts.banner = "Usage: shift_subtitle [OPTIONS] input-file output-file"

  opts.on("-h", "--help", "Shows this message") do
    puts opts
    exit
  end

  opts.on("--operation OP", [:add, :sub], "add or subtract") do |op|
    options[:op] = op
  end
end

opts.parse!
